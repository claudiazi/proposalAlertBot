{
    "compilerOptions": {
        "outDir": "./dist",
        "lib": [
            "DOM",
            "ES2020"
        ],
        "target": "ES2017",
        "module": "ES2020",
        "moduleResolution": "node",
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "resolveJsonModule": true,
        "baseUrl": ".",
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "paths": {
            "*": [
                "node_modules/*"
            ]
        }
    }
}